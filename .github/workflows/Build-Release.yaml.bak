name: Build Release

on:
  push:
    tags: ['v*']
  workflow_dispatch:
    inputs:
      release_version:
        description: 'Release version (e.g., v1.0.0)'
        required: true
        type: string
        default: 'v1.0.0'
      version_code:
        description: 'Version code (e.g., 1, 2, 3)'
        required: true
        type: string
        default: '1'

      # è‡ªå®šä¹‰æ›´æ–°å†…å®¹éƒ¨åˆ†
      custom_title_1:
        description: 'ç¬¬ä¸€ä¸ªè‡ªå®šä¹‰æ ‡é¢˜ (æ”¯æŒMarkdownæ ¼å¼ï¼Œç•™ç©ºåˆ™è·³è¿‡æ­¤éƒ¨åˆ†)'
        required: false
        type: string
        default: ''
      custom_content_1_1:
        description: 'ç¬¬ä¸€ä¸ªæ ‡é¢˜ä¸‹çš„å†…å®¹é¡¹ 1 (ç•™ç©ºåˆ™è·³è¿‡)'
        required: false
        type: string
        default: ''
      custom_content_1_2:
        description: 'ç¬¬ä¸€ä¸ªæ ‡é¢˜ä¸‹çš„å†…å®¹é¡¹ 2 (ç•™ç©ºåˆ™è·³è¿‡)'
        required: false
        type: string
        default: ''

      custom_title_2:
        description: 'ç¬¬äºŒä¸ªè‡ªå®šä¹‰æ ‡é¢˜ (æ”¯æŒMarkdownæ ¼å¼ï¼Œç•™ç©ºåˆ™è·³è¿‡æ­¤éƒ¨åˆ†)'
        required: false
        type: string
        default: ''
      custom_content_2_1:
        description: 'ç¬¬äºŒä¸ªæ ‡é¢˜ä¸‹çš„å†…å®¹é¡¹ 1 (ç•™ç©ºåˆ™è·³è¿‡)'
        required: false
        type: string
        default: ''
      custom_content_2_2:
        description: 'ç¬¬äºŒä¸ªæ ‡é¢˜ä¸‹çš„å†…å®¹é¡¹ 2 (ç•™ç©ºåˆ™è·³è¿‡)'
        required: false
        type: string
        default: ''

env:
  GO_VERSION: '1.25'
  ANDROID_NDK_VERSION: 'r28b'
  ANDROID_API_LEVEL: '28'

jobs:
  version-setup:
    runs-on: ubuntu-latest
    outputs:
      version: ${{ steps.version.outputs.VERSION }}
      version_code: ${{ steps.version.outputs.VERSION_CODE }}
    steps:
    - name: Determine version and version code
      id: version
      run: |
        if [[ "${{ github.event_name }}" == "workflow_dispatch" ]]; then
          echo "VERSION=${{ github.event.inputs.release_version }}" >> $GITHUB_OUTPUT
          echo "VERSION_CODE=${{ github.event.inputs.version_code }}" >> $GITHUB_OUTPUT
        else
          echo "VERSION=${GITHUB_REF#refs/tags/}" >> $GITHUB_OUTPUT
          echo "VERSION_CODE=1" >> $GITHUB_OUTPUT
        fi
        echo "Using version: ${{ steps.version.outputs.VERSION }}"
        echo "Using version code: ${{ steps.version.outputs.VERSION_CODE }}"

  setup-android-ndk:
    runs-on: ubuntu-latest
    outputs:
      ndk-home: ${{ steps.setup-ndk.outputs.ndk-home }}
    steps:
    - name: Setup Android NDK R28
      id: setup-ndk
      uses: nttld/setup-ndk@v1
      with:
        ndk-version: ${{ env.ANDROID_NDK_VERSION }}

    - name: Verify NDK installation
      run: |
        echo "ANDROID_NDK_HOME: $ANDROID_NDK_HOME"
        echo "NDK toolchain contents:"
        ls $ANDROID_NDK_HOME/toolchains/llvm/prebuilt/linux-x86_64/bin/*-clang | head -10
        echo "âœ… NDK R28 setup completed"

  prepare-changelog:
    runs-on: ubuntu-latest
    needs: [version-setup, setup-android-ndk]
    outputs:
      changelog_content: ${{ steps.prepare_changelog.outputs.changelog_content }}
    steps:
    - name: Get current timestamp (Beijing Time)
      id: timestamp
      run: |
        echo "BUILD_TIME=$(TZ='Asia/Shanghai' date +'%Y-%m-%d %H:%M:%S')" >> $GITHUB_OUTPUT
        echo "BUILD_DATE=$(TZ='Asia/Shanghai' date +'%Y-%m-%d')" >> $GITHUB_OUTPUT

    - name: Prepare fully customized changelog content
      id: prepare_changelog
      run: |
        # åˆ›å»º changelog.md æ–‡ä»¶ - ä½¿ç”¨åŠ¨æ€å†…å®¹ç”Ÿæˆ
        {
          echo "# EZ-Clean ${{ needs.version-setup.outputs.version }} æ›´æ–°æ—¥å¿—"
          echo ""
          echo "## ğŸ“‹ ç‰ˆæœ¬æ¦‚è§ˆ"
          echo "*ç‰ˆæœ¬: ${{ needs.version-setup.outputs.version }}*  "
          echo "*ç‰ˆæœ¬ä»£ç : ${{ needs.version-setup.outputs.version_code }}*  "
          echo "*æ„å»ºæ—¶é—´: ${{ steps.timestamp.outputs.BUILD_TIME }}*"
          echo "*æœ€ä½æ”¯æŒ: Android 9.0 (API 28)*"
          echo "*æ„å»ºå·¥å…·: NDK R28 + Go ${{ env.GO_VERSION }}*"
          echo ""
          
          # ç¬¬ä¸€ä¸ªæ ‡é¢˜éƒ¨åˆ†
          if [ -n "${{ github.event.inputs.custom_title_1 }}" ]; then
            echo "${{ github.event.inputs.custom_title_1 }}"
            
            if [ -n "${{ github.event.inputs.custom_content_1_1 }}" ]; then
              echo "${{ github.event.inputs.custom_content_1_1 }}"
            fi
            
            if [ -n "${{ github.event.inputs.custom_content_1_2 }}" ]; then
              echo "${{ github.event.inputs.custom_content_1_2 }}"
            fi
            
            echo ""
          fi
          
          # ç¬¬äºŒä¸ªæ ‡é¢˜éƒ¨åˆ†
          if [ -n "${{ github.event.inputs.custom_title_2 }}" ]; then
            echo "${{ github.event.inputs.custom_title_2 }}"
            
            if [ -n "${{ github.event.inputs.custom_content_2_1 }}" ]; then
              echo "${{ github.event.inputs.custom_content_2_1 }}"
            fi
            
            if [ -n "${{ github.event.inputs.custom_content_2_2 }}" ]; then
              echo "${{ github.event.inputs.custom_content_2_2 }}"
            fi
            
            echo ""
          fi
          
          # å¦‚æœæ²¡æœ‰è‡ªå®šä¹‰å†…å®¹
          if [ -z "${{ github.event.inputs.custom_title_1 }}" ] && [ -z "${{ github.event.inputs.custom_title_2 }}" ]; then
            echo "## ğŸ”§ æŠ€æœ¯æ›´æ–°"
            echo "- âœ… æå‡æœ€ä½æ”¯æŒåˆ° Android 9.0 (API 28)"
            echo "- âœ… ä½¿ç”¨ NDK R28 å·¥å…·é“¾æ„å»º"
            echo "- âœ… ä¼˜åŒ–ç³»ç»Ÿå…¼å®¹æ€§å’Œç¨³å®šæ€§"
            echo ""
          fi
          
          echo "## ğŸ“¦ å®‰è£…è¯´æ˜"
          echo "1. **ä¸‹è½½æ¨¡å—**: é€‰æ‹©é€‚åˆæ‚¨è®¾å¤‡æ¶æ„çš„æ¨¡å—åŒ…"
          echo "2. **åˆ·å…¥æ¨¡å—**: åœ¨ Magisk æˆ– KernelSU ä¸­å®‰è£…"
          echo "3. **é‡å¯è®¾å¤‡**: ä½¿æ¨¡å—ç”Ÿæ•ˆ"
          echo "4. **é…ç½®è®¾ç½®**: æ ¹æ®éœ€æ±‚è°ƒæ•´æ¨¡å—é…ç½®"
          echo ""
          echo "## âš ï¸ ç³»ç»Ÿè¦æ±‚"
          echo "- **æœ€ä½ Android ç‰ˆæœ¬**: 9.0 (API 28)"
          echo "- **æ¶æ„æ”¯æŒ**: ARM, ARM64"
          echo "- **ROOT ç¯å¢ƒ**: Magisk æˆ– KernelSU"
          echo ""
          echo "## âš ï¸ æ³¨æ„äº‹é¡¹"
          echo "- ğŸ’¾ **å¤‡ä»½æ•°æ®**: å®‰è£…å‰è¯·å¤‡ä»½é‡è¦æ•°æ®"
          echo "- ğŸ“± **å…¼å®¹æ€§**: ç¡®ä¿è®¾å¤‡è¿è¡Œ Android 9.0 æˆ–æ›´é«˜ç‰ˆæœ¬"
          echo "- ğŸ”„ **æ›´æ–°å»ºè®®**: å»ºè®®ä»æ—§ç‰ˆæœ¬å‡çº§æ—¶å…ˆå¸è½½æ—§ç‰ˆå†å®‰è£…æ–°ç‰ˆ"
          echo "- â“ **é—®é¢˜åé¦ˆ**: å¦‚é‡é—®é¢˜è¯·æäº¤ Issue å¹¶æä¾›è¯¦ç»†æ—¥å¿—"
        } > changelog.md
        
        # è¯»å–æ–‡ä»¶å†…å®¹åˆ°å˜é‡
        CHANGELOG_CONTENT=$(cat changelog.md)
        
        # è¾“å‡ºå†…å®¹åˆ°æ­¥éª¤è¾“å‡º
        echo "changelog_content<<EOF" >> $GITHUB_OUTPUT
        echo "$CHANGELOG_CONTENT" >> $GITHUB_OUTPUT
        echo "EOF" >> $GITHUB_OUTPUT

        echo "âœ… Fully customized changelog prepared successfully with NDK R28 and API 28 info"

    - name: Upload changelog artifact
      uses: actions/upload-artifact@v4
      with:
        name: changelog-${{ github.run_id }}-${{ github.run_attempt }}
        path: changelog.md
        retention-days: 1

  update-json-files:
    runs-on: ubuntu-latest
    needs: [version-setup, prepare-changelog]
    permissions:
      contents: write

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        fetch-depth: 0

    - name: Update JSON files with API 28 support
      run: |
        echo "Updating JSON files for version ${{ needs.version-setup.outputs.version }} with API 28"
        
        # æ›´æ–°ä¸¤ä¸ªJSONæ–‡ä»¶ï¼Œæ·»åŠ minApiå­—æ®µ
        jq -c --arg version "${{ needs.version-setup.outputs.version }}" \
           --arg versionCode "${{ needs.version-setup.outputs.version_code }}" \
           --arg minApi "${{ env.ANDROID_API_LEVEL }}" \
           --arg zipUrl "https://github.com/${{ github.repository }}/releases/download/${{ needs.version-setup.outputs.version }}/EZ-Clean-arm.zip" \
           --arg changelog "https://github.com/${{ github.repository }}/releases/download/${{ needs.version-setup.outputs.version }}/changelog.md" \
           '.version = $version | .versionCode = ($versionCode | tonumber) | .minApi = ($minApi | tonumber) | .zipUrl = $zipUrl | .changelog = $changelog' \
           EZ/arm.json > temp1.json && mv temp1.json EZ/arm.json
        
        jq -c --arg version "${{ needs.version-setup.outputs.version }}" \
           --arg versionCode "${{ needs.version-setup.outputs.version_code }}" \
           --arg minApi "${{ env.ANDROID_API_LEVEL }}" \
           --arg zipUrl "https://github.com/${{ github.repository }}/releases/download/${{ needs.version-setup.outputs.version }}/EZ-Clean-arm64.zip" \
           --arg changelog "https://github.com/${{ github.repository }}/releases/download/${{ needs.version-setup.outputs.version }}/changelog.md" \
           '.version = $version | .versionCode = ($versionCode | tonumber) | .minApi = ($minApi | tonumber) | .zipUrl = $zipUrl | .changelog = $changelog' \
           EZ/arm64.json > temp2.json && mv temp2.json EZ/arm64.json
        
        echo "JSON files updated successfully with API 28 support"

    - name: Commit and push JSON files
      run: |
        git config --local user.email "41898282+github-actions[bot]@users.noreply.github.com"
        git config --local user.name "github-actions[bot]"
        
        git add EZ/arm.json EZ/arm64.json
        
        if git diff --staged --quiet; then
          echo "No changes to commit"
        else
          git commit -m "ci: update JSON files for version ${{ needs.version-setup.outputs.version }} with API 28 support"
          git pull --rebase origin main
          git push origin main
          echo "Successfully updated JSON files with API 28 support"
        fi

  build:
    runs-on: ubuntu-latest
    needs: [version-setup, setup-android-ndk, prepare-changelog]
    strategy:
      matrix:
        include:
          - arch: arm64
            goarch: arm64
            android_triple: aarch64-linux-android
          - arch: arm
            goarch: arm
            android_triple: armv7a-linux-androideabi

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        fetch-depth: 0

    - name: Set up Go
      uses: actions/setup-go@v4
      with:
        go-version: ${{ env.GO_VERSION }}
        cache: true

    - name: Build Go binary for Android with NDK R28
      run: |
        # è®¾ç½®Goç¼–è¯‘ç¯å¢ƒ - å¯ç”¨CGO
        export GOOS=android
        export GOARCH=${{ matrix.goarch }}
        export CGO_ENABLED=0
        
        # è®¾ç½®Android NDKå·¥å…·é“¾ - ä½¿ç”¨APIçº§åˆ«28
        export API_LEVEL=${{ env.ANDROID_API_LEVEL }}
        
        # è®¾ç½®ç¼–è¯‘å™¨è·¯å¾„
        export CC=$ANDROID_NDK_HOME/toolchains/llvm/prebuilt/linux-x86_64/bin/${{ matrix.android_triple }}$API_LEVEL-clang
        export CXX=$ANDROID_NDK_HOME/toolchains/llvm/prebuilt/linux-x86_64/bin/${{ matrix.android_triple }}$API_LEVEL-clang++
        
        echo "ğŸš€ Building for Android with NDK R28 (API $API_LEVEL):"
        echo "  GOOS: $GOOS"
        echo "  GOARCH: $GOARCH" 
        echo "  CGO_ENABLED: $CGO_ENABLED"
        echo "  CC: $CC"
        echo "  API Level: $API_LEVEL"
        
        # éªŒè¯ç¼–è¯‘å™¨
        $CC --version || echo "Compiler check completed"
        
        # éªŒè¯Goç¯å¢ƒ
        echo "ğŸ”§ Go environment:"
        go env GOPATH GOOS GOARCH CGO_ENABLED
        
        # ç¼–è¯‘æ ¹ç›®å½•çš„ EZ.go æ–‡ä»¶
        echo "ğŸ—ï¸ Building EZ.go for ${{ matrix.arch }}..."
        go build -v -ldflags="-s -w" -o EZ-${{ matrix.arch }} ./EZ.go
        
        echo "âœ… Go binary built successfully with NDK R28"
        echo "ğŸ“¦ Binary details:"
        file EZ-${{ matrix.arch }}
        ls -lh EZ-*
        echo "ğŸ” Binary info:"
        readelf -h EZ-${{ matrix.arch }} 2>/dev/null || echo "Not an ELF binary"

    - name: Prepare module files
      run: |
        # åˆ›å»ºæ¨¡å—ç›®å½•
        mkdir -p build/EZ-${{ matrix.arch }}
        
        echo "ğŸ“ Preparing module files for EZ-${{ matrix.arch }}"
        
        # å¤åˆ¶åŸºç¡€æ¨¡å—æ–‡ä»¶
        cp -r EZ/META-INF build/EZ-${{ matrix.arch }}/
        cp EZ/whitelist.conf build/EZ-${{ matrix.arch }}/
        cp EZ/blacklist.conf build/EZ-${{ matrix.arch }}/
        cp EZ/App.conf build/EZ-${{ matrix.arch }}/
        cp EZ/service.sh build/EZ-${{ matrix.arch }}/
        cp EZ/customize.sh build/EZ-${{ matrix.arch }}/
        cp EZ/reload.sh build/EZ-${{ matrix.arch }}/
        
        # å¤åˆ¶äºŒè¿›åˆ¶æ–‡ä»¶
        cp EZ-${{ matrix.arch }} build/EZ-${{ matrix.arch }}/EZ
        
        # å¤åˆ¶é…ç½®æ–‡ä»¶
        cp EZ/config.conf build/EZ-${{ matrix.arch }}/
        
        # å¤åˆ¶å¹¶æ›´æ–°module.propæ–‡ä»¶
        cp EZ/${{ matrix.arch }}/module.prop build/EZ-${{ matrix.arch }}/
        
        # æ›´æ–°ç‰ˆæœ¬ä¿¡æ¯
        sed -i "s|^version=.*|version=${{ needs.version-setup.outputs.version }}|" build/EZ-${{ matrix.arch }}/module.prop
        sed -i "s|^versionCode=.*|versionCode=${{ needs.version-setup.outputs.version_code }}|" build/EZ-${{ matrix.arch }}/module.prop
        
        # æ·»åŠ APIçº§åˆ«ä¿¡æ¯åˆ°æ¨¡å—å±æ€§
        echo "minApi=${{ env.ANDROID_API_LEVEL }}" >> build/EZ-${{ matrix.arch }}/module.prop
        
        echo "âœ… Module files prepared with API level ${{ env.ANDROID_API_LEVEL }}"
        echo "ğŸ“ Version: ${{ needs.version-setup.outputs.version }}"
        echo "ğŸ”¢ Version Code: ${{ needs.version-setup.outputs.version_code }}"
        echo "ğŸ“¦ Binary: EZ-${{ matrix.arch }} -> EZ"
        echo "ğŸ“„ Config files: config.conf"

    - name: Package modules
      run: |
        cd build
        echo "ğŸ“¦ Packaging modules..."
        
        for dir in */; do
          if [ -d "$dir" ]; then
            dir_name=$(basename "${dir%/}")
            zip_name="$dir_name.zip"
            
            echo "Creating: $zip_name"
            cd "$dir_name"
            zip -r "../$zip_name" .
            cd ..
            
            echo "âœ… Created: $zip_name"
          fi
        done
        
        echo "=== All packages ==="
        ls -la *.zip

    - name: Verify artifacts
      run: |
        echo "ğŸ” Verifying artifacts..."
        expected_zip="build/EZ-${{ matrix.arch }}.zip"
        
        if [ -f "$expected_zip" ]; then
          echo "âœ… Found: $expected_zip"
          echo "ğŸ“Š Size: $(du -h "$expected_zip" | cut -f1)"
          
          # éªŒè¯zipå†…å®¹
          echo "ğŸ“ Contents:"
          unzip -l "$expected_zip" | head -10
          
          # æ£€æŸ¥å…³é”®æ–‡ä»¶
          echo "ğŸ” Essential files:"
          unzip -l "$expected_zip" | grep -E "(EZ|module.prop|config.conf|service.sh)" || echo "Some files missing!"
          
          # æ£€æŸ¥APIçº§åˆ«ä¿¡æ¯
          if unzip -p "$expected_zip" module.prop | grep -q "minApi=28"; then
            echo "âœ… API level 28 correctly set in module.prop"
          else
            echo "âŒ API level not found in module.prop"
          fi
          
        else
          echo "âŒ Missing: $expected_zip"
          ls -la build/
          exit 1
        fi

    - name: Upload artifacts
      uses: actions/upload-artifact@v4
      with:
        name: EZ-${{ matrix.arch }}-api28
        path: build/EZ-${{ matrix.arch }}.zip
        retention-days: 1
        if-no-files-found: error

    # æ·»åŠ è‡ªåŠ¨é‡è¯•æœºåˆ¶
    - name: Rerun failed workflow (auto-retry)
      if: failure() && fromJSON(github.run_attempt) < 3
      run: |
        echo "ğŸ”„ Auto-retry mechanism triggered (attempt ${{ github.run_attempt }}/3)"

  release:
    runs-on: ubuntu-latest
    needs: [build, update-json-files, prepare-changelog]
    if: always() && (needs.build.result == 'success' || needs.build.result == 'skipped')
    env:
      TZ: Asia/Shanghai

    steps:
    - name: Download all build artifacts
      uses: actions/download-artifact@v4
      with:
        path: artifacts
        pattern: EZ-*
        merge-multiple: true

    - name: Download changelog artifact
      uses: actions/download-artifact@v4
      with:
        name: changelog-${{ github.run_id }}-${{ github.run_attempt }}
        path: artifacts

    - name: Read version info
      id: version
      run: |
        VERSION="${{ needs.version-setup.outputs.version }}"
        VERSION_CODE="${{ needs.version-setup.outputs.version_code }}"
        echo "VERSION=$VERSION" >> $GITHUB_OUTPUT
        echo "VERSION_CODE=$VERSION_CODE" >> $GITHUB_OUTPUT
        echo "Using version: $VERSION"
        echo "Using version code: $VERSION_CODE"

    - name: Get current timestamp (Beijing Time)
      id: timestamp
      run: |
        echo "BUILD_TIME=$(TZ='Asia/Shanghai' date +'%Y-%m-%d %H:%M:%S')" >> $GITHUB_OUTPUT
        echo "BUILD_DATE=$(TZ='Asia/Shanghai' date +'%Y-%m-%d')" >> $GITHUB_OUTPUT

    - name: Verify all artifacts
      run: |
        echo "ğŸ” Verifying all release artifacts with API 28 support"
        
        ZIP_COUNT=$(find artifacts -name "*.zip" -type f | wc -l)
        CHANGELOG_COUNT=$(find artifacts -name "changelog.md" -type f | wc -l)
        
        echo "Found $ZIP_COUNT ZIP files and $CHANGELOG_COUNT changelog files"
        
        if [ $ZIP_COUNT -eq 2 ] && [ $CHANGELOG_COUNT -eq 1 ]; then
          echo "âœ… All artifacts present"
          
          # éªŒè¯æ¯ä¸ªzipæ–‡ä»¶
          for file in artifacts/*.zip; do
            echo "Checking: $(basename "$file")"
            if unzip -t "$file" > /dev/null 2>&1; then
              echo "  âœ… Valid zip"
              # æ£€æŸ¥APIçº§åˆ«ä¿¡æ¯
              if unzip -p "$file" module.prop | grep -q "minApi=28"; then
                echo "  âœ… API level 28 verified"
              else
                echo "  âŒ API level 28 missing"
                exit 1
              fi
            else
              echo "  âŒ Corrupted zip"
              exit 1
            fi
          done
        else
          echo "âŒ Missing artifacts"
          find artifacts -type f | sort
          exit 1
        fi

    - name: Create Release
      if: startsWith(github.ref, 'refs/tags/') || github.event_name == 'workflow_dispatch'
      uses: softprops/action-gh-release@v1
      with:
        tag_name: ${{ steps.version.outputs.VERSION }}
        name: Release ${{ steps.version.outputs.VERSION }} (API 28+)
        files: |
          artifacts/EZ-arm.zip
          artifacts/EZ-arm64.zip
          artifacts/changelog.md
        body: |
          ${{ needs.prepare-changelog.outputs.changelog_content }}
          
          ## ğŸ›  æ„å»ºä¿¡æ¯
          - **NDK ç‰ˆæœ¬**: R28 (${{ env.ANDROID_NDK_VERSION }})
          - **æœ€ä½ Android ç‰ˆæœ¬**: 9.0 (API 28)
          - **Go ç‰ˆæœ¬**: ${{ env.GO_VERSION }}
          - **æ¶æ„æ”¯æŒ**: ARM, ARM64

    - name: Cleanup old workflows
      uses: Mattraks/delete-workflow-runs@v2
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        repository: ${{ github.repository }}
        retain_days: 0
        keep_minimum_runs: 1

    - name: Cleanup old artifacts
      uses: c-hive/gha-remove-artifacts@v1.4.0
      with:
        age: '3 days'